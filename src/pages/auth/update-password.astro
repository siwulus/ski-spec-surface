---
import Layout from "@/layouts/Layout.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { UpdatePasswordForm } from "@/components/auth/UpdatePasswordForm";
---

<Layout title="Update password - Ski Surface Spec Extension">
  <main class="container mx-auto flex min-h-[calc(100vh-4rem)] max-w-7xl items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <Card>
        <CardHeader className="space-y-1 text-center">
          <CardTitle className="text-2xl font-bold">Update your password</CardTitle>
          <CardDescription>Enter your new password to complete the reset process</CardDescription>
        </CardHeader>
        <CardContent>
          <UpdatePasswordForm client:load />
        </CardContent>
      </Card>
    </div>
  </main>
</Layout>
