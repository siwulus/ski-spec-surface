---
import Layout from "../layouts/Layout.astro";
import ToastTest from "../components/ToastTest";
---

<Layout title="Ski Specifications">
  <div class="space-y-6">
    <header>
      <h1 class="text-3xl font-bold text-foreground">Ski Specifications</h1>
      <p class="mt-2 text-muted-foreground">Manage your ski specifications and compare different models.</p>
    </header>

    <section aria-labelledby="toast-test-heading" class="bg-card border border-border shadow-sm rounded-lg p-6">
      <h2 id="toast-test-heading" class="text-lg font-medium text-card-foreground mb-4">Test Toast Notifications</h2>
      <ToastTest client:load />
    </section>
  </div>
</Layout>
