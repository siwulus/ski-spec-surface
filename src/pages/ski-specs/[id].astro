---
import Layout from '@/layouts/Layout.astro';
import { SkiSpecDetail } from '@/components/ski-specs/SkiSpecDetail';
import { AuthGuard } from '@/components/auth/AuthGuard';

const { id } = Astro.params;
const returnQueryParams = Astro.url.search;
---

<Layout title="Ski Specification Details">
  <div class="space-y-6">
    <AuthGuard client:load redirectTo="/auth/login">
      <SkiSpecDetail client:load specId={id ?? ''} returnQueryParams={returnQueryParams ?? ''} />
    </AuthGuard>
  </div>
</Layout>
